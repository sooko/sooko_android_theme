<Btn>:
    pos_hint:{"center_x":.5,"center_y":.5}
<AccountBar>:   
    pos_hint:{"center_x":.5,"center_y":.5}
    canvas:
        Color:
            rgba:root.background_color
        Rectangle:
            size:self.size
            pos:self.pos
    username:""
    wa:""
    background_color:35/255,47/255,64/255,1
    source:""
    padding:5
    orientation:"vertical"
    size_hint:1,None
    height:self.minimum_height
    Label:
        pos_hint:{"center_x":.5,"center_y":.5}
        size_hint:None,None
        size:"100dp","100dp"
        canvas:
            Color:
                rgba:1,1,1,1
            Ellipse:
                size:self.size
                pos:self.pos
                source:root.source
    Label:
        text:root.username
        bold:True
        size_hint:1,None
        height:"20dp"
        font_size:self.height/1.2
    Label:
        text:root.wa
        size_hint:1,None
        height:"20dp"
        font_size:self.height/1.5
<ItemButton>:
    source:"navleftimg/account24l.png"
    press:0
    release:0
    size_hint:1,None
    text:"account"
    height:"50dp"
    BoxLayout
        pos_hint:{"center_x":.5,"center_y":.5}
        spacing:10
        padding:10,0,0,0
        Image
            source:
            size_hint:.2,1
            source:root.source
            color:1,1,1,.5
        Label:
            text:root.text
            halign:"left"
            valign:"middle"
            text_size:self.size
            bold:True
    Btn:
        on_press:root.press+=1
        on_release:root.release+=1
<NavLeft>:
    username:"hans"
    wa:"+285732525914"
    account_icon: "navleftimg/mqtticon.png"
    background_color:28/255,36/255,47/255,1
    canvas:
        Color:
            rgba:root.background_color
        Rectangle:
            size:self.size
            pos:self.pos
    ScrollView:
        pos_hint:{"center_x":.5,"center_y":.5}
        BoxLayout:
            spacing:5
            orientation:"vertical"
            size_hint:1,None
            height:self.minimum_height
            AccountBar:
                source: root.account_icon
                username:root.username
                wa:root.wa
            ItemButton:
                on_press:root.select(self.text)
            ItemButton:
                source:"navleftimg/home24l.png"
                text:"home"
                on_press:root.select(self.text)
            ItemButton:
                source:"navleftimg/server24l.png"
                text:"server"
                on_press:root.select(self.text)
            ItemButton:
                source:"navleftimg/add24l.png"
                text:"add widget"
                on_press:root.select(self.text)
            
